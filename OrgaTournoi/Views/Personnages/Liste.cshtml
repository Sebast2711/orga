@model OrgaTournoi.Models.PersonnageJeuViewModel

@{
    Layout = "_Layout";
    ViewData["lien"] = "/css/liste.css";
}

<div class="container-fluid gauche-droite">
    <div class="gauche">
        <div class="gauche-haut">
            <h2>@Model.Jeu.Nom</h2>
            <img src = "@Model.Jeu.Image" />
        </div>
        <div class="gauche-bas">
            @Html.ActionLink("Revenir au detail du jeu", "Details", "Jeux",new {id=Model.Jeu.Id} )
        </div>
    </div>

    <div class="droite">
        <h2>Liste des personnages</h2>
        <div class="row">
                        
            @foreach (var personnage in Model.Personnages)
            {
                <div class="col-2">
                    <img src="@personnage.Image" style="width:50px;height:50px;" />
                    @personnage.Nom
                </div>
            }
        </div>
    </div>
</div>
