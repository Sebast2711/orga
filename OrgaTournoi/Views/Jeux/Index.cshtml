@model IEnumerable<OrgaTournoi.Models.Jeu>

@{
    ViewData["Title"] = "Index";
    ViewData["lien"] = "/css/liste.css";

}

<div class="container-fluid gauche-droite">
    <div class="gauche">
        <div class="gauche-haut">
            <h2>@Model.First().Nom</h2>
            <p>@Model.First().Description</p>
            <img src="@Model.First().Image" />
        </div>
        <div class="gauche-bas">
            @Html.ActionLink("Voir Details", "Details", "Jeux", new {id=@Model.First().Id})
        </div>
    </div>

    <div class="droite">
        <h2>Liste des jeux</h2>
        <ul class="no-deco">
            @foreach (var evenement in Model.Skip(1))
            {
                <li>@Html.ActionLink(evenement.Nom,"Details", "Jeux", new {id=@evenement.Id})</li>
            }
        </ul>
    </div>
</div>



