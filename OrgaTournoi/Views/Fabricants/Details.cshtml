@model OrgaTournoi.Models.FabricantJeuViewModel

@{
    ViewData["Title"] = "Details";
    ViewData["lien"] = "/css/liste.css";
}

<div class="container-fluid gauche-droite">
    <div class="gauche">
        <div class="gauche-haut bg-image" style="background-image:url('https://via.placeholder.com/150');">
            <h2>@Model.Fabricant.Nom</h2>
            <p>@Model.Fabricant.Type</p>
            <p>@Model.Fabricant.Siret</p>
            <p>@Model.Fabricant.Directeur</p>
            <a href="@Model.Fabricant.Lien">Lien vers le site</a>
        </div>
        <div class="gauche-bas">

        </div>
    </div>

    <div class="droite">
        <h2>Liste des jeux</h2>
        <ul class="no-deco">
            @foreach (var jeu in Model.Jeux)
            {
                <li>@Html.ActionLink(jeu.Nom,"Details", "Jeux", new {id=@jeu.Id})</li>
            }
        </ul>
    </div>
</div>


